{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,            // 🔥 타입 오류 우회 (변경)
    "jsx": "react-jsx",

    /* Linting (타입 검사 비활성화) */
    "strict": false,           // 🔥 엄격한 타입 검사 비활성화
    "noImplicitAny": false,    // 🔥 암시적 `any` 허용
    "noUnusedLocals": false,   // 🔥 사용되지 않는 변수 경고 비활성화
    "noUnusedParameters": false, // 🔥 사용되지 않는 매개변수 경고 비활성화
    "noFallthroughCasesInSwitch": false, // 🔥 switch 문 fallthrough 경고 비활성화
    "noUncheckedSideEffectImports": false // 🔥 불필요한 경고 제거
  },
  "include": ["src"]
}
